    private async Task HandleLogin()
    {
        Console.WriteLine($"Rozpoczęcie logowania dla użytkownika: {loginModel.Email} Model HashCode: {loginModel.GetHashCode()}");
        isProcessing = true;
        StateHasChanged();

        try{
        if (string.IsNullOrEmpty(loginModel.Email) || string.IsNullOrEmpty(loginModel.Password))
        {
            Console.WriteLine("Login.HandleLoginAttempt: Email or Password is null/empty before calling SignInManager. This should have been caught by validation.");
            errorMessage = "Email i hasło nie mogą być puste.";
            isProcessing = false;
            StateHasChanged();
            return;
        }

            var result = await SignInManager.PasswordSignInAsync(
                loginModel.Email,
                loginModel.Password,
                loginModel.RememberMe,
                lockoutOnFailure: false);

            if (result.Succeeded)
            {
                Console.WriteLine("Logowanie powiodło się. Przekierowanie...");
                NavigationManager.NavigateTo("/");
            }
            else
            {
                Console.WriteLine($"Logowanie nie powiodło się. Rezultat: {result}");
                errorMessage = "Błąd logowania!";
                if (result.IsLockedOut)
                {
                    errorMessage = "Konto jest tymczasowo zablokowane.";
                }
                else if (result.IsNotAllowed)
                {
                    errorMessage = "Logowanie nie jest dozwolone. Skontaktuj się z administratorem (np. email niepotwierdzony).";
                }


            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Błąd: {ex.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

